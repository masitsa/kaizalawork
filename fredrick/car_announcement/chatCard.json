{
    "schemaVersion": 1,
    "schema": {
        "type": "container",
        "initialHeight": 300,
        "layout": "vertical",
        "children": [
            {
                "type": "text",
                "paddingLeft": 10,
                "paddingRight": 10,
                "string": "${Form.properties[sellerTitle].value}",
                "fontSize": 12,
                "fontStyle": "bold",
                "textColor": "#858484",
                "textAlignment": "left",
                "maxNumberOfLines": 2,
                "marginBottom": 10,
                "font-weight":"lighter"
            },
            {
                "type": "text",
                "paddingLeft": 10,
                "paddingRight": 10,
                "string": "${Form.properties[carDescription].value}",
                "fontSize": 17,
                "fontStyle": "bold",
                "textColor": "#32495f",
                "textAlignment": "center",
                "maxNumberOfLines": 2,
                "marginBottom": 10
            },
            {
                "type": "text",
                "paddingLeft": 10,
                "paddingRight": 10,
                "string": "${Form.properties[carStatus].value}",
                "fontSize": 17,
                "fontStyle": "bold",
                "textColor": "#32495f",
                "textAlignment": "center",
                "maxNumberOfLines": 2,
                "marginBottom": 10
            },
            {
                "type": "text",
                "paddingLeft": 10,
                "paddingRight": 10,
                "string": "${Form.properties[date].value}",
                "fontSize": 12,
                "fontStyle": "bold",
                "textColor": "#858484",
                "textAlignment": "left",
                "maxNumberOfLines": 4,
                "marginBottom": 0
            }
        ]
    }
}